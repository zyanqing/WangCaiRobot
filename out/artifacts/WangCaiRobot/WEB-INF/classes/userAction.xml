<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <package name="struts_userAction" namespace="/" extends="struts-default">

        <interceptors>
            <interceptor name="interceptorOne" class="interceptor.PrivilegeInterceptor"/>

            <!-- 定义拦截器栈 -->
            <interceptor-stack name="myInterceptor">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="interceptorOne"/>
            </interceptor-stack>

        </interceptors>

        <global-results>
            <result name="login" type="redirect">/login.jsp</result>
        </global-results>

        <action name="user_*" class="action.UserAction" method="{1}">
            <result name="loginSuccess" type="redirect">/home.jsp</result>
            <result name="querySuccess">/jsp/list.jsp</result>
            <result name="delet">/menu.jsp</result>
            <result name="refreshMenu">/menu.jsp</result>

            <!--引入拦截器栈-->
            <interceptor-ref name="myInterceptor"/>

            <allowed-methods>login,signOut,chatList,delet,refreshMenu</allowed-methods>

        </action>

    </package>

</struts>